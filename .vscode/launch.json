{
  // Use IntelliSense to learn about possible attributes.
  // Hover to view descriptions of existing attributes.
  // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
  "version": "0.2.0",
  "configurations": [
    {
      "type": "ruby_lsp",
      "request": "launch",
      "name": "Run imapcli to collect stats",
      "program": "ruby ${workspaceFolder}/exe/imapcli -s ${input:server} -u ${input:user} -p ${input:pass} stats"
    },
    {
      "type": "ruby_lsp",
      "request": "launch",
      "name": "Run rspec",
      "program": "rspec"
    },
    {
      "type": "ruby_lsp",
      "name": "Debug script",
      "request": "launch",
      "program": "ruby ${file}"
    },
    {
      "type": "ruby_lsp",
      "name": "Debug test",
      "request": "launch",
      "program": "ruby -Itest ${relativeFile}"
    },
    {
      "type": "ruby_lsp",
      "name": "Attach debugger",
      "request": "attach"
    }
  ],
  "inputs": [
    {
      "id": "server",
      "type": "promptString",
      "description": "FQDN of the mail server to connect to"
    },
    {
      "id": "user",
      "type": "promptString",
      "description": "IMAP user"
    },
    {
      "id": "pass",
      "type": "promptString",
      "description": "Password of the IMAP user (BE AWARE THAT THIS IS NOT ENCRYPTED IN THE DEBUG ENVIRONMENT)"
    },
  ]
}